// reassurance.liquid

.reassurance__image {
  height: 100px;
}
.reassurance__title {
  margin-bottom: 20px;
}

.reassurance__text {
  margin-bottom: 20px;
}

// left-right.liquid


.left-right__cta {
  display: inline-block;
  height: 40px;
  line-height: 40px;
  padding : 0 20px;
  margin-bottom: 10px;
  color: white;
  background-color: black;
  font-family: "Montserrat";
  border: 2px black solid;
  outline: none;
}

.left-right__cta:hover {
  background-color: white;
  color: black;
}

.container--small {
  margin-left: 40px;
  margin-right: 40px;
}

.container {
  margin-left: 20px;
  margin-right: 20px;
}

.left-right__image--right {
  float: right;
  width: 100%;
}

.left-right__image--left {
  width: 100%;
}

.left-right__title {
  font-weight: bold;
}

.z-grid--center2 {
  display: flex;
}

.left-right__contents {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.left-right__video {
  overflow: hidden;
  padding-bottom: 56.25%;
  position: relative;
  height: 0;
}
.left-right__video iframe {
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  position: absolute;
}

@media(max-width : 500px) {

  .z-grid--center2 {
    display: block;
  }

  .z-grid__cell2,
  .left-right__contents {
    display: block;
    margin-left: auto;
    margin-right: auto;
    width: 100%;
  }

  .left-right__title {
    margin-top: 10px;
  }

  .left-right__title,
  .left-right__subtitle{
    text-align: center;
  }

  .left-right__cta {
    width: 100%;
    text-align: center;

  }

}

// banner.liquid

.banner__video {
  overflow: hidden;
  padding-bottom: 56.25%;
  position: relative;
  height: 0;
}

.banner__video iframe {
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  position: absolute;
}

.banner__image {
  width: 100%;
}

.banner__content {
  position: absolute;
  top:50%;
  transform: translateY(-50%);
  left: 10%;
  color: white;
  font-family: "Montserrat";
}

h1:not(.hero__title).banner__title {
  color:white;
  font-size: 70px;
  margin-bottom: -30px;
}

.banner__cta {
  padding: 5px 20px;
  background-color: white;
  outline: none;
}

.prev_arrow {
  position: absolute;
  z-index: 1;
  color: white;
  left: 3%;
  font-size: 30px;
  outline: none;
}

.next_arrow {
  position: absolute;
  z-index: 1;
  color: white;
  right: 3%;
  font-size: 30px;
  outline: none;
}

.arrows--top .arrow{
  top: 5%;
  transform: translateY(5%);
}

.arrows--middle .arrow{
  top: 50%;
  transform: translateY(50%);
}

.arrows--bottom .arrow{
  bottom: 0%;
  top:unset;
}

.slick-dots {
  outline: none;
}

// featured-collection.liquid

.featured-collection__section {
  position:relative;
}

.featured-collection__hidden--hover {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  left: 0;
  top: 0;
  text-align: center;
  width: 100%;
  height: 100%;
  color: black;
}

.featured-collection__section:hover .featured-collection__hidden--hover {
  opacity: 1;
}

.featured-collection__section:hover .featured-collection__image {
  opacity: 0;
}

.featured-collection__hidden--image {
  position: absolute;
  top: 0;
  opacity: 0.60;
}

.featured-collection__hidden--paragraph {
  position: absolute;
  top: 20%;
}

.featured-collection__hidden--container {
  position: relative;
  padding-left: 35px;
  margin-bottom: 32px;
  cursor: pointer;
  font-size: 32px;
  margin-left: 5px;
  margin-right: 5px;
}

.featured-collection__hidden--container input {
  position: absolute;
}

.featured-collection__hidden--checkmark {
  position: absolute;
  top: 0;
  left: 0;
  height: 40px;
  width: 40px;
  background-color: #eee;
  border: 1px solid black;
  font-size: 15px;
  line-height: 40px;
}

.featured-collection__hidden--disabled-checkmark {
  height: 1px;
  width: 54px;
  background-color: black;
  position: absolute;
  top: 50%;
  left: -8px;
  transform: translate(0, -50%);
  transform: rotate(45deg);
}

.featured-collection__hidden--checkmark2:hover,
.featured-collection__hidden--disabled-input:hover {
  cursor: auto;
}

.featured-collection__hidden--container:hover input ~ .featured-collection__hidden--checkmark1 {
  background-color: #ccc;
}

.featured-collection__hidden--container input:checked ~ .featured-collection__hidden--checkmark {
  background-color: black;
  color: white;
}

.featured-collection__hidden--container .featured-collection__hidden--checkmark:after {
  left: 9px;
  top: 5px;
  width: 5px;
  height: 10px;
  border: solid white;
  border-width: 0 3px 3px 0;
  -webkit-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  transform: rotate(45deg);
}

.featured-collection__hidden--title {
  position: absolute;
  font-size: 15px;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.featured-collection__hidden--btn {
  background-color: grey;
  position: absolute;
  z-index: 1;
  left: 50%;
  top: 70%;
  transform: translate(-50%, -50%);
}

.featured-collection__hidden--form {
  margin-top: -50px;
  max-width: 230px;
}
